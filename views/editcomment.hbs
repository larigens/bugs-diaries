{{!-- Edit Comment Section --}}
<section class="d-flex justify-content-center m-2 mb-4 mt-5 pt-5">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div id="{{comment.id}}" class="card-body m-1">
                        <div class="text-center">
                            <img src="https://media3.giphy.com/media/CEHtFH3rJ6xdhBUKIT/giphy.gif?cid=ecf05e47myqfw62d0jjmjuij60pohdxc9mkig7cy2ek5hhrc&rid=giphy.gif&ct=s"
                                class="img-fluid" width="180px" alt="curly brackets gif">
                        </div>
                        <form id="editcomment" name="editcomment" method="put" action="editcomment"
                            class="card-body cardbody-color p-lg-2">
                            <div class="form-outline mb-4">
                                <textarea type="text" id="updatedComment" class="form-control form-control-lg"
                                    rows="6">{{{breaklines comment.comment}}}</textarea>
                            </div>
                            <div class="d-flex justify-content-center mt-1">
                                <button type="submit"
                                    class="gradient light-shades btn ps-3 pe-3 d-flex justify-content-center flex-nowrap mb-2 mt-4 width-20">
                                    Update!
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/js/editcomment.js"></script>