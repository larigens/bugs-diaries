<div class="jumbotron-fluid p-1">
    <div class="container">
        <h1 class="display-4 gradient-text text-center mt-5">
            Welcome
            <i class="fa fa-laptop"aria-hidden="true"></i>
            <i class="fa fa-bug gradient-text" aria-hidden="true"></i>
        </h1>
        <p class="dark-accent mt-4 text-center">
            To access all of our contents, please log in to your account.
        </p>
    </div>
</div>

<div class="container mb-5">
    <div class="row d-flex align-items-center h-100">
        <div class="col-md-6 offset-md-3">
            <div class="card my-3" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <form id="login" name="login" method="post" action="login" class="card-body cardbody-color p-lg-2">
                        <div class="text-center">
                            <img src="/images/apple-touch-icon.png"
                                class="img-fluid profile-image-pic img-thumbnail rounded-circle mt-1 mb-5" width="170px"
                                alt="profile">
                        </div>
                        <div class="mb-3">
                            <input type="text" name="username" class="form-control" id="username"
                                aria-describedby="usernameHelp" placeholder="Username" required>
                        </div>
                        <div class="mb-3">
                            <input type="password" name="password" class="form-control" id="password"
                                placeholder="Bugword" required>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit"
                                class="gradient light-shades btn ps-3 pe-3 d-flex justify-content-center flex-nowrap mb-3 mt-3">
                                Submit
                            </button>
                        </div>
                        <div id="usernameHelp" class="form-text text-center text-muted mt-5 mb-0">Not Registered?
                            <a href="/signup" class="gradient-text text-body"> Create an Account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>