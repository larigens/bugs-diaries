{{!-- Login --}}
<section class="d-flex align-items-center m-4">
    <div class="container mb-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <form id="login" name="login" method="post" action="login"
                            class="card-body cardbody-color p-lg-2">
                            <div class="form-outline pt-1 mb-1 text-center">
                                <img src="/images/logo.png"
                                    class="img-fluid profile-image-pic img-thumbnail rounded-circle mt-1 mb-5"
                                    width="180px" height="180px" alt="profile">
                            </div>
                            <div class="form-outline pt-1 mb-4">
                                <input type="text" id="login-username" name="username"
                                    class="form-control form-control-lg" placeholder="Username" required />
                            </div>
                            <div class="form-outline pt-1 mb-4">
                                <input type="password" id="login-password" name="password"
                                    class="form-control form-control-lg" placeholder="Bugword" required />
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit"
                                    class="gradient light-shades btn ps-3 pe-3 d-flex justify-content-center flex-nowrap mb-3 mt-3 width-20">
                                    Submit
                                </button>
                            </div>
                            <p class="text-center text-muted mt-5 mb-0">
                                Not Registered?
                                <a href="/signup" class="gradient-text text-body"> Create an Account</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/js/login.js"></script>