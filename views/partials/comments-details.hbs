<div class="d-flex justify-content-center">
    <div class="card p-2 m-5" style="flex: 1; flex-grow: 1;">
        <div class="d-flex card-body m-1 border-bottom border-2 mb-3">
            <h5 class="card-title gradient-text fw-semibold p-2 mt-1" style="letter-spacing: 3px;">
                {{commentObj.user.username}}
            </h5>
            {{#if isUser}}
            <div class="justify-content-end ms-auto my-auto">
                <button onclick="editComment({{commentObj.id}})" class="btn gradient-text fs-5 ">
                    <i class="fa fa-pencil ms-1 gradient-text " aria-hidden="true"></i> </button>
                <button onclick="deleteComment({{commentObj.id}})" class="gradient-text btn fs-5"><i
                        class="fa fa-trash gradient-text"></i></button>
            </div>
            {{/if}}
            <p class="card-subtitle mt-3 dark-accent fs-small ms-auto"> Posted on: <span
                    class="gradient-text">{{commentObj.date}}</span> </p>
        </div>
        <div class="d-flex justify-content-start mb-3 me-2 ms-4">
            <p class="card-text dark-accent fs-6 mb-2 pb-1">{{commentObj.comment}}</p>
        </div>
    </div>
</div>