<div class="d-flex flex-wrap">
    <div class="card p-2 m-5" style="flex: 1; flex-grow: 1;">
        <a href="/post/{{id}}">
            <div class="card-body m-2">
                <h2 class="card-title gradient-text fw-semibold heading-font pb-2">{{title}}</h2>
                <p class="card-subtitle mt-3 pb-2 border-bottom border-2 dark-accent"> Debugged by:
                    <span class="ms-1 heading-font gradient-text fw-semibold fst-italic" style="letter-spacing: 0.7px;">
                        {{user.username}} </span>
                </p>
            </div>
            <div class="d-flex justify-content-start ms-4 me-4 mb-3">
                <p class="card-text dark-accent mb-2 pb-1 me-2" style="text-align: justify;">{{{breaklines content}}}
                </p>
            </div>
        </a>
    </div>
</div>