<div class="d-flex mt-5 mb-2 pt-4 justify-content-center align-items-center">
    <h2 class="display-2 dark-accent fw-semibold heading-font text-center flex-wrap me-2" style="letter-spacing: 4px;">
        {{diary.diary_name}}</h2>
    <img src="https://media3.giphy.com/media/ZGbnid8SQaLvd5FnLz/giphy.gif?cid=ecf05e47avne7tbod4ddeion2cr7rbcgroq62hnui0hilnj3&rid=giphy.gif&ct=s"
        class="img-fluid rounded-circle flex-wrap" width="140px" alt="laptop gif">
</div>
{{#each diary.posts as |post|}}
<div class="align-items-baseline">
    {{> post-details}}
</div>
<div class="d-flex justify-content-end mt-1 mb-3 me-2">
    <p class="dark-accent me-5">Posted on: <span class="gradient-text">{{date}} </span></p>
</div>
{{/each}}