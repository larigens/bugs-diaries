{{!-- Create new Post Section --}}
<div class="d-flex m-4 ms-5 pt-5 pb-3 justify-content-center">
    <h2 class="dark-accent fw-semibold display-4 text-center" style="letter-spacing: 20px;"> De
        <i class="fa fa-bug gradient-text ms-1" aria-hidden="true"></i>
        <span class="gradient-text">Time</span>
    </h2>
</div>

<section class="d-flex justify-content-center m-2 mb-4">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <div class="text-center">
                            <img src="https://media1.giphy.com/media/3SL41WtN5l9DNdPJGs/giphy.gif?cid=ecf05e47mjwbxcrd0i6xshckbwr5ff7dre5dpe89h0wqa3wo&rid=giphy.gif&ct=ts"
                                class="img-fluid rounded-circle" width="180px" alt="lets code gif">
                        </div>
                        <form id="newpost" name="newpost" method="post" action="newpost"
                            class="card-body cardbody-color p-lg-2">
                            <div class="form-outline mb-4">
                                <input type="text" id="title" name="title" class="form-control form-control-lg"
                                    placeholder="Title" required />
                            </div>
                            <div class="form-outline mb-4">
                                <textarea type="text" id="content" class="fs-small form-control form-control-lg"
                                    rows="6" required> </textarea>
                            </div>
                            <div id="diaries" class="form-outline mb-4 ms-1">
                                <p class="gradient-text fw-semibold">Select all diaries to which your post is related:
                                </p>
                            </div>
                            <div class="d-flex justify-content-center mt-1">
                                <button type="submit"
                                    class="gradient light-shades btn ps-3 pe-3 d-flex justify-content-center flex-nowrap mb-2 mt-4 width-20">
                                    Share!
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/js/newpost.js"></script>