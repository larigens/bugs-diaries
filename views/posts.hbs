<h2 class="ms-2 pb-2 pt-4 mb-2 mt-5 text-center display-4 heading-font gradient-text"> My Posts
    <i class="fa fa-bug gradient-text" aria-hidden="true"></i>
</h2>
{{#each posts as |post|}}
<div class="d-flex justify-content-center mt-3 pt-5">
    <div class="card pb-0 mt-4 width-75">
        <div class="card-body m-1">
            <a href="/post/{{id}}">
                <h3 class="card-title text-center fw-semibold dark-accent border-bottom border-2 pb-2">{{title}}</h3>
            </a>
            <div class="hstack gap-2 col-md-5 mb-2 mx-auto justify-content-center">
                <a href="/editpost" class="gradient-text">
                    <i class="fa fa-pencil ms-1 gradient-text " aria-hidden="true"></i> </a>
                <div class="vr"></div>
                <button class="delete-btn fs-5"><i class="fa fa-trash gradient-text"></i></button>
            </div>
        </div>
        <div class="d-flex justify-content-start mb-3 me-2 ms-4 light-accent">
            <p class="card-text">{{content}}</p>
        </div>
        <div class="d-flex justify-content-end mb-3 me-2 ms-4 light-accent">
            <p class="card-text fs-small fw-semibold me-2"> Posted on: <span class="gradient-text"> {{date}}</span>
            </p>
        </div>
    </div>
</div>
{{/each}}