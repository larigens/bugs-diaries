{{!-- User's Posts Section --}}
<h2 class="ms-2 pb-2 pt-4 mb-2 mt-5 text-center display-4 heading-font gradient-text"> My Posts
    <i class="fa fa-bug gradient-text" aria-hidden="true"></i>
</h2>
<div class="text-center">
    <img src="https://media2.giphy.com/media/yWnfMrmiqLQuZtFkt8/giphy.gif" class="img-fluid" width="170px"
        alt="code code code gif">
</div>
{{#each posts as |post|}}
<div class="d-flex justify-content-center mt-3 pt-3 mb-5 ms-3 me-3">
    <div class="card pb-0 mt-4 m-3">
        <div class="d-flex card-body m-1 border-bottom border-2 mb-3">
            <a id="postA"  href="/post/{{id}}">
                <h2 class="card-title fw-semibold gradient-text p-2 mt-1">{{post.title}}</h2>
            </a>
            <div class="justify-content-end ms-auto my-auto">
                <button onclick="editPost({{id}})" class="btn gradient-text fs-5 ">
                    <i class="fa fa-pencil ms-1 gradient-text " aria-hidden="true"></i> </button>
                <button onclick="deletePost({{id}})" class="gradient-text btn fs-5"><i
                        class="fa fa-trash gradient-text"></i></button>
            </div>
        </div>
        {{!--The triple curly braces syntax tells Handlebars to render the content as raw HTML --}}
        <div class="d-flex justify-content-start mb-3 me-3 ms-3 p-2">
            <p class="card-text me-1 dark-accent" style="text-align: justify;">{{{breaklines post.content}}}</p>
        </div>

        <div class="d-flex justify-content-end mb-3 me-2 ms-4 light-accent">
            <p class="card-text fs-small fw-semibold me-3"> Posted on: <span class="gradient-text"> {{date}}</span>
            </p>
        </div>
    </div>
</div>
{{/each}}