<div class="jumbotron-fluid p-1 mt-5">
    <div class="d-flex justify-content-center mt-4">
        <h1 class="ms-1 dark-accent display-5"> Help us <span class="gradient-text">Debug!!</span> 👩🏻‍💻 </h1>
    </div>
</div>

<section class="d-flex align-items-center m-4">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h5 class="text-uppercase text-center mb-5 pt-2 gradient-text">Create an account</h5>
                        <form id="signup" name="signup" method="post" action="/signup">
                            <div class="form-outline pt-1 mb-4">
                                <input type="text" id="username" name="username" class="form-control form-control-lg"
                                    placeholder="Username" required />
                            </div>
                            <div class="form-outline mb-2">
                                <input type="password" id="password" name="password"
                                    class="form-control form-control-lg" placeholder="Bugword" required />
                            </div>
                            <div id="passwordHelpBlock" class="mb-2 ms-1 dark-accent fs-micro form-text">
                                Your password must be 8-20 characters long.
                            </div>
                            <div class="form-check d-flex justify-content-center mt-3 pt-5 mb-5">
                                <input class="form-check-input me-2" type="checkbox" value="" id="terms"
                                    aria-required="true" required />
                                <label class="form-check-label" for="terms">
                                    I agree all statements in
                                    <a href="#!" class="gradient-text text-body fw-semibold"><u>Terms of Service</u></a>
                                </label>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" value="signup"
                                    class="button-hv btn p-2 w-50 d-flex justify-content-center flex-nowrap mb-3 mt-3 background-gradient light-shades">
                                    Register
                                </button>
                            </div>
                            <p class="text-center text-muted mt-5 mb-0">Have already an account?
                                <a href="/login" class="gradient-text text-body">Login here</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/js/signup.js"></script>