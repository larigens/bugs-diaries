<div id="dashboard" class="text-center"></div>
<div class="container text-center">
    <img src="https://media3.giphy.com/media/qEqiI3Oq7vBkoE236M/giphy.gif" class="img-fluid mt-5 pt-4 pb-2"
        width="220px" alt="coder gif">
</div>

<div class="d-flex justify-content-center pt-4">
    <div class="card p-1 m-4" style="border-radius: 15px;">
        <div class="card-body p-3 text-center">
            <div class="hstack gap-2 col-md-12 p-2 mb-2 mx-auto justify-content-center">
                <a href="/posts" class="background-gradient light-hv gradient-text fs-3 btn p-3 width-20">
                    MY POSTS </a>
                <div class="vr ms-4 me-4"></div>
                <a href="/newpost" id="newpostBtn"
                    class="background-gradient light-hv gradient-text fs-3 btn p-3 width-20">
                    NEW POST </a>
            </div>
        </div>
    </div>
</div>

<div class="d-flex mt-5 pt-5 justify-content-center">
    <h3 class="display-6 gradient-text text-center">Our Diaries: </h3>
</div>
<div class="text-center">
    <img src="https://media3.giphy.com/media/Tgw604MyLJnDtbi4t0/giphy.gif" class="img-fluid rounded-circle"
        width="170px" alt="the coding space gif">
</div>
<div class="d-flex ps-3 pe-3 mb-5 m-2 justify-content-center">
    <div class="row d-flex align-items-baseline">
        {{#each diaries as |diary|}}
        {{> diary-details}}
        {{/each}}
    </div>
</div>